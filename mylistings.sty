\lstset{
    xleftmargin=0pt,
    mathescape=true,
    language=Caml,
    upquote=true,
    autogobble,
    columns=fullflexible,
    showspaces=false,
    showtabs=false,
    breaklines=true,
    showstringspaces=false,
    breakatwhitespace=true,
    commentstyle=\color{greencomments},
    keywordstyle=\color{bluekeywords},
    stringstyle=\color{redstrings},
    numberstyle=\color{graynumbers},
    basicstyle=\ttfamily\footnotesize,
    frame=none,
    framesep=12pt,
    tabsize=2,
    captionpos=b,
    morekeywords={val, struct, sig, module, end, include},
    literate=
        {->}{$\rightarrow$ }{2}
}
